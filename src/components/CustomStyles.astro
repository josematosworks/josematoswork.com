---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --jmw-font-sans: 'Inter Variable';
    --jmw-font-serif: 'Inter Variable';
    --jmw-font-heading: 'Inter Variable';

    --jmw-color-primary: #f7931d;
    --jmw-color-secondary: #716558;

    --jmw-color-text-heading: rgb(0 0 0);
    --jmw-color-text-default: rgb(16 16 16);
    --jmw-color-text-muted: rgb(16 16 16 / 66%);
    --jmw-color-bg-page: rgb(255 255 255);

    --jmw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --jmw-font-sans: 'Inter Variable';
    --jmw-font-serif: 'Inter Variable';
    --jmw-font-heading: 'Inter Variable';

    --jmw-color-primary: #f7931d;
    --jmw-color-secondary: #716558;

    --jmw-color-text-heading: rgb(247, 248, 248);
    --jmw-color-text-default: rgb(229 236 246);
    --jmw-color-text-muted: rgb(229 236 246 / 66%);
    --jmw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
