---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactMe from '~/components/widgets/Contact.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <Fragment slot="header">
    <Header
      links={[]}
      actions={[
        { text: 'Download CV', href: '/pdfs/Jose_Matos_Senior_Frontend_Engineer_Resume.pdf', target: '_blank' },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactMe
    id="form"
    title="Get in Touch"
    subtitle="I'm always open to new opportunities and collaborations. Feel free to reach out if you have any questions or just want to say hello!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="I'll do my best to respond within 24-48 hours."
  />

  <!-- Features Widget ************** -->

  <Features
    title="Other Ways to Reach Me"
    items={[
      {
        title: 'Phone',
        description: '+41 0 782 275 230',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@josematoswork.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Basel, Switzerland',
        icon: 'tabler:map-pin',
      },
    ]}
  />
  <!-- Calendly Widget Section -->
  <div class="py-12 md:py-16 lg:py-20">
    <div class="md:mx-auto text-center max-w-xl sm:mx-auto lg:max-w-2xl mb-8">
      <h2 class="leading-tighter text-heading text-3xl md:text-4xl font-bold tracking-tighter mb-4 font-heading">
        Schedule a Meeting
      </h2>
      <p class="max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400">
        Book time directly on my calendar for a conversation about potential collaborations or opportunities.
      </p>
    </div>
    <div class="max-w-3xl mx-auto">
      <!-- Calendly inline widget begin -->
      <div class="calendly-inline-widget" data-url="https://calendly.com/developer-josematoswork" style="min-width:320px;height:700px;"></div>
      <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
      <!-- Calendly inline widget end -->
    </div>
  </div>
</Layout>
